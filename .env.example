# ============================================
# SCHIZODOT AI - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=SchizoDot Backend
ENV=development  # development, staging, production

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# S3 Storage
S3_BUCKET=schizodot-backend-storage

# DynamoDB Tables
DYNAMO_TABLE=SchizodotUsers
DYNAMO_TABLE_JOBS=SchizodotJobs

# ============================================
# AWS BEDROCK (LLM)
# ============================================
BEDROCK_REGION=us-east-1
BEDROCK_ENABLE=false  # Set to true when ready to use Bedrock
BEDROCK_MODEL_ID=anthropic.claude-v2  # or anthropic.claude-3-sonnet, mistral.mistral-7b-instruct

# ============================================
# REDIS & CELERY
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000

# CORS - Add your frontend URLs (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.vercel.app

# ============================================
# INTERNAL SERVICE URLS (Docker Network)
# ============================================
AI_PIPELINE_URL=http://ai-pipeline:8001

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to true for auto-reload during development
RELOAD=false

# ============================================
# NOTES
# ============================================
# 1. Get AWS credentials from IAM user: schizodot-dev
# 2. Ensure S3 bucket and DynamoDB tables exist in us-east-1
# 3. For Bedrock, ensure model access is enabled in AWS Console
# 4. Redis and internal services use Docker network names
